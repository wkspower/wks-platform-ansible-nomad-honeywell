job "storage_api" {
  datacenters = ["dc1"]

  group "apps" {
    network {
      port "http" {
        to = 8085
      }
    }

    task "storage_api" {
      driver = "docker"

      config {
        image = "ghcr.io/wkspower/storage-api:{{ tag }}"
        ports = ["http"]
      }

      resources {
        cpu    = 500
        memory = 512
      }

      env {
        OPA_URL="http://opa.service.consul:8181/v1/data/wks/authz/allow"
        KEYCLOAK_URL="http://opa.service.consul.keycloak:8080"
        MINIO_HOST_INTERNAL="opa.service.consul.minio"
        MINIO_ROOT_USER="minio"
        MINIO_ROOT_PASSWORD="BwiY|61P1z3("
      }      

      service {
        name = "storageapi"
        provider = "consul"
        port = "http"
      }
    }
  }
}
